<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-full md:w-[50%] lg:w-[40%] xl:w-[30%] bg-white px-6 py-8 rounded-[30px]">
        <h1 class="text-3xl mb-6 text-center font-semibold text-zinc-700 capitalize tracking-tighter leading-none">Create New Account</h1>

        <% if (error && error.length > 0) { %>
            <p class="flash-error" style="color: red; font-weight: 400; text-transform: capitalize; margin: 7px 0; text-align: center;">
              <%= error %>
            </p>
          <% } %>

        <form action="/register" method="post">
            <input class="border-2 rounded-md mt-4 w-full px-3 py-2" type="text" name="username" placeholder="Username">
            <input class="border-2 rounded-md mt-4 w-full px-3 py-2" type="text" name="fullname" placeholder="Full Name">
            <input class="border-2 rounded-md mt-4 w-full px-3 py-2" type="email" name="email" placeholder="Email">
            <input class="border-2 rounded-md mt-4 w-full px-3 py-2" type="number" name="contact" placeholder="Contact">
            <input class="border-2 rounded-md mt-4 w-full px-3 py-2" type="password" name="password" placeholder="Password">
            <input class="border-2 rounded-full mt-6 w-full px-3 py-2 bg-red-600 text-white" type="submit" value="Create New Account">
            <p class="text-xs font-semibold text-zinc-700 mt-6 text-center">By continuing, you agree to Pinterest's Terms of Service and acknowledge that you've read our Privacy Policy. Notice at collection.</p>
        </form>
        <a class="block mt-6 text-sm font-semibold text-zinc-700 text-center" href="/">Already have an account? Login</a>
    </div>
</div>

<% include ./partials/footer.ejs %>
